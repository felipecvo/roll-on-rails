<h1>Submit new story</h1>
<% form_for(@story) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    Category:<br />
    <% @categories.each do |category| %>
      <%= radio_button 'story', 'category_id', category.id %><%= category.name %>
    <% end %>
  </p>
  <p>
    Tags<br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', stories_path %>
